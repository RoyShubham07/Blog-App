<!DOCTYPE html>
<html>
<head>
    <title>My Blog</title>
    <link rel="stylesheet" type="text/css" href="/style.css">
</head>
<body>
    <h1>Blog Posts</h1>
    <a href="/new-post">Create New Post</a>
    <div>
        <% if (posts.length === 0) { %>
            <p>No posts yet!</p>
        <% } else { %>
            <% posts.forEach(post => { %>
                <div class="post">
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>
